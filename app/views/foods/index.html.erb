<section id="food-list">
  <h1 class="text-center fw-bold">Welcome To Your Food Store</h1>
  <br>
  <br>
  <div class="text-center">
    <button class="btn btn-success">
      <%= link_to 'Add food', new_food_path, class: "text-white text-decoration-none" %>
    </button>
  </div>
  <br>
  <br>
  <table class="table table-striped table-bordered  w-75 mx-auto shadow">
    <thead class="thead-dark fs-5">
      <tr>
        <th>Index</th>
        <th>Food</th>
        <th>Measurement Unit</th>
        <th>Quantity</th>
        <th>Unit price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each_with_index do |food, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= food.name %></td>
          <td><%= food.measurement_unit %></td>
          <td><%= food.quantity %></td>
          <td><%= number_to_currency(food.price) %></td>
          <td>
            <%= button_to "Delete", food_path(food), method: :delete, data: { confirm: "Are you sure you want to delete this food?" }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

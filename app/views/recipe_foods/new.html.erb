<h1 class="text-center fw-bold">Add Ingredients</h1>
<br>
<br>
<%= form_tag recipe_foods_path, method: :post do %>
  <%= hidden_field_tag :recipe_id, @recipe.id %>
  <table class="table table-striped table-bordered  w-75 mx-auto shadow">
    <thead class="thead-dark fs-5">
      <tr >
        <th>index</th>
        <th>Food</th>
        <th>Quantity</th>
        <th>Add</th>
      </tr>
    </thead>
    <tbody>
      <% current_user.foods.each_with_index do |food, index| %>
        <tr>
          <td class="fs-10" ><%= index+1 %></td>
          <td class="fs-10"><%= food.name %></td>
          <td><%= number_field_tag "quantity[#{food.id}]", nil, class: "col-md-2 fs-10" %></td>
          <td ><input class=" form-check-input-lg" type="checkbox" name="add_food[]" value="<%= food.id %>"></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <div class="col-md-2 mb-3 mx-auto">
  <%= submit_tag "save", class:"btn btn-primary"  %>

  </div>
<% end %>
